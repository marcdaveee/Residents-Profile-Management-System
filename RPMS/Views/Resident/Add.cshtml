<div class="row mx-3 my-3" style="width: 80%">
        
    <h4 class="mb-3">Personal Profile</h4>
    <form method="post" asp-action="Add" class="needs-validation" novalidate>
        <div class="row g-3 mb-4">
            <div class="col-sm-4">
                <label asp-for="Firstname" class="form-label">First name</label>
                <input asp-for="Firstname" class="form-control" placeholder="" required>
                <span asp-validation-for="Firstname" class="invalid-feedback">                    
                </span>
            </div>

            <div class="col-sm-4">
                <label asp-for="Middlename" class="form-label">Middle name</label>
                <input asp-for="Middlename" class="form-control" placeholder="" required>
                <span asp-validation-for="Middlename" class="invalid-feedback">                    
                </span>
            </div>

            <div class="col-sm-4">
                <label asp-for="Lastname" class="form-label">Last name</label>
                <input class="form-control" asp-for="Lastname" placeholder="" required>
                <span asp-validation-for="Lastname" class="invalid-feedback">                
                </span>
            </div>

        </div>

        <div class="row g-3 mb-5">
            <div class="col-md-2">
                <label asp-for="Gender" class="form-label">Sex</label>
                <select class="form-select" asp-for="Gender" required>
                    <option value="">Choose...</option>
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                </select>
                <span asp-validation-for="Gender" class="invalid-feedback">                    
                </span>
            </div>

            <div class="col-md-3">
                <label asp-for="Birthday" class="form-label">Birthday</label>
                <div class="input-group has-validation">
                    <span class="input-group-text"></span>
                    <input type="date" class="form-control" asp-for="Birthday">
                    <span asp-validation-for="Birthday" class="invalid-feedback">                        
                    </span>
                </div>
            </div>

            <div class="col-md-2">
                <label asp-for="Status" class="form-label">Sex</label>
                <select class="form-select" asp-for="Status" required>
                    <option value="">Choose...</option>
                    <option value="Single">Single</option>
                    <option value="Married">Married</option>
                </select>
                <span asp-validation-for="Status" class="invalid-feedback">
                </span>
            </div>
        </div>

        <hr class="mb-4">

        <h4 class="mb-3">Contact</h4>

        <div class="row mb-5">
            <div class="col-4">
                <label asp-for="ContactNo" class="form-label">Contact No. <span class="text-muted">(Optional)</span></label>
                <div class="input-group has-validation">
                    <span class="input-group-text"></span>
                    <input class="form-control" asp-for="ContactNo" placeholder="11-digit phone number">
                    <span asp-validation-for="ContactNo" class="invalid-feedback">                        
                    </span>
                </div>
            </div>

            <div class="col-4">
                <label asp-for="Email" class="form-label">Email <span class="text-muted">(Optional)</span></label>
                <input class="form-control" asp-for="Email" placeholder="youremail@example.com">
                <span asp-validation-for="Email" class="invalid-feedback">                    
                </span>
            </div>
        </div>
        

