@model ErrorViewModel
@{
    ViewData["Title"] = ViewData["Title"];
    Layout = "~/Views/Shared/non-dashboard-layout.cshtml";
}


<div class=" d-flex flex-column align-items-center justify-content-center align-content-lg-center ">
    <h1 class="display-1 fw-bold">@ViewData["StatusCode"]</h1>
    <p class="fs-3"><span class="text-danger">Opps!</span> @ViewData["Title"]</p>
    <p class="lead">@ViewData["ErrorMessage"]</p>
    <a asp-controller="resident" asp-action="Index" class="btn btn-primary">
        Go Home
    </a>
</div>


