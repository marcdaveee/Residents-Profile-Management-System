    <table class="table table-hover align-middle mb-0 ">
        <thead class="bg-dark text-white">
            <tr>
                <th>Name</th>
                <th>Street</th>
                <th>Sex</th>
                 <th>Status</th>                
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Select((value, i) => new { i, value }))
            {
                <tr>
                    <td>
                        <div class="d-flex align-items-center">
                            <img src="https://mdbootstrap.com/img/new/avatars/8.jpg"
                                 alt=""
                                 style="width: 45px; height: 45px"
                                 class="rounded-circle" />
                            <div class="ms-3">
                                <p class="fw-bold mb-1">@item.value.Lastname, @item.value.Firstname</p>
                                <p class="text-muted mb-0">@item.value.Age</p>
                            </div>
                        </div>
                    </td>
                    <td>
                        <p class="fw-normal mb-1">To Work on</p>                        
                    </td>
                    <td>
                        <p class="fw-normal mb-1">@item.value.Gender</p>
                    </td>
                    <td>
                        <p class="fw-normal mb-1">@item.value.Status</p>
                    </td>
                    <td>
                        <a asp-controller="resident" asp-action="details" asp-route-id="@item.value.Id" class="btn btn-link btn-sm btn-rounded">
                            View
                        </a>
                    </td>
                </tr>
            }
            
        </tbody>
    </table>
