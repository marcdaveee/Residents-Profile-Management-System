@using RPMS.ViewModels
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewBag.Title = "Edit - Address";
    ViewBag.HeadingTitle = "Edit Address";
}
 
@model EditAddressViewModel


<div class="mx-3 mt-3">
    <a asp-controller="address" asp-action="Index" class="btn btn-outline-dark">
        <span>
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-arrow-left" viewBox="0 0 16 16">
                <path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8" />
            </svg>
        </span> Back
    </a>
</div>

<div class="d-flex justify-content-center my-3">
    <div class="card" style="width:400px">
        <div class="card-header bg-primary text-light">
            Edit Address
        </div>

        <div class="card-body">
            <form method="post" asp-action="edit" asp-controller="address">
                <div class="row g-3 mb-4">
                    <div class="col-sm-12">
                        <label asp-for="Brgy" class="form-label">Brgy.</label>
                        <input asp-for="Brgy" class="form-control" placeholder="">
                        <span asp-validation-for="Brgy" class="text-danger small">
                        </span>
                    </div>

                    <div class="col-sm-12">
                        <label asp-for="Municipality" class="form-label">Municipality</label>
                        <input asp-for="Municipality" class="form-control" placeholder="">
                        <span asp-validation-for="Municipality" class="text-danger small">
                        </span>
                    </div>

                    <div class="col-sm-12">
                        <label asp-for="Town" class="form-label">Province</label>
                        <input asp-for="Town" class="form-control" placeholder="">
                        <span asp-validation-for="Town" class="text-danger small">
                        </span>
                    </div>
                </div>

                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-primary">Edit</button>
                </div>
            </form>
        </div>
    </div>
</div>
