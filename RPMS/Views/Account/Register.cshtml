@{
    Layout = "~/Views/Shared/non-dashboard-layout.cshtml";
}

@model RegisterViewModel

@* <h4 class="text-info">Register</h4> *@
<form asp-controller="Account" asp-action="Register" method="post" role="form">
    <h4 class="text-info text">Set up your Admin Account</h4>
    
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group mb-3">
        <label asp-for="Email" class="col-md-2"></label>
        <div class="col-md-10">
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div> 
    <div class="form-group mb-3">
        <label asp-for="Password" class="col-md-2"></label>
        <div class="col-md-10">
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group mb-4">
        <label asp-for="ConfirmPassword" class=""></label>
        <div class="col-md-10">
            <input asp-for="ConfirmPassword" class="form-control" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
    </div>    

    <div class="form-group d-flex justify-content-start">
        <div class="">
            <button type="submit" class="btn btn-success">Register</button>
        </div>
    </div>
</form>
